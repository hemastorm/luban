<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.storm.luban.dao.MaterialTypeDAO">
    <resultMap id="resultMap" type="com.storm.luban.bean.MaterialType">
        <id column="type_id" property="typeId" jdbcType="BIGINT"/>
        <result column="product_id" property="productId" jdbcType="BIGINT"/>
        <result column="NAME" property="name" jdbcType="VARCHAR"/>
        <result column="CODE" property="code" jdbcType="VARCHAR"/>
        <result column="STATUS" property="status" jdbcType="INTEGER"/>
        <result column="parent_id" property="parentId" jdbcType="BIGINT"/>
        <result column="is_leaf" property="isLeaf" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="allColumn">
    type_id, product_id, `NAME`, CODE, STATUS, parent_id, is_leaf
  </sql>
    <select id="querySysMaterialType" resultMap="resultMap">
        SELECT
        <include refid="allColumn"/>
        FROM
        material_type
        WHERE
        product_id = #{productId}
        <if test="parentId != null">
            AND  parent_id = #{parentId}
        </if>
        <if test="parentId != null">
            AND  parent_id = -1
        </if>
    </select>
</mapper>